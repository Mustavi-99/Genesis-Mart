
@{
    ViewBag.Title = "ContactUs";
    @Styles.Render("~/Content/css")

}

<div class="bodybg">
    <div>
        <h1 class="headcontact">Contact Us</h1>
    </div>
    <div>
        <p class="textcontact">Anything you want to buy for your digital entertainment, you can grab it from here....</p>
    </div>
    <div class="container">
        <div class="contact">
            <div class="row">
                <div class="col-xl-6">
                    <div class="Incontact">
                        <div class="">
                            <div>
                                <h2 class="mt-5 text-align-center contactemail">Email</h2>
                                <p class="contactwrite">xyz@gmail.com</p>
                            </div>
                        </div>
                        <div>
                            <div class="mt-5">
                                <h2 class="contactemail">Contact No.</h2>
                                <p class="contactwrite">01696969696</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <form>
                        <div class="form-group mt-5 mb-3">
                            <label class="mb-2">Full Name</label>
                            <input type="text" class="form-control" placeholder="">
                        </div>
                        <div class="form-group mb-3">
                            <label class="mb-2">Email</label>
                            <input type="email" class="form-control" placeholder="">
                        </div>
                        <div class="form-group mb-3">
                            <label class="mb-2">Message</label>
                            <textarea class="form-control cotext" id="floatingTextarea" placeholder="What's your say ?"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>